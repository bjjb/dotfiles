#!/usr/bin/env bash
# Installs the dotfiles into the home directory.
files=`dirname $0`
ln -snFv $files/.bash
ln -snFv $files/.bashrc       $HOME/.bashrc
ln -snFv $files/.bash_profile $HOME/.bash_profile
ln -snFv $files/.Xdefaults    $HOME/.Xdefaults
ln -snfv $files/.ctags        $HOME/.ctags
ln -snFv $files/.cvsignore    $HOME/.cvsignore
ln -snFv $files/.vim          $HOME/.vim
ln -snFv $files/.vimrc        $HOME/.vimrc
ln -snFv $files/.tmux         $HOME/.tmux
ln -snFv $files/.tmux.conf    $HOME/.tmux.conf
ln -snFv $files/.irbrc        $HOME/.irbrc
ln -snFv $files/.gemrc        $HOME/.gemrc
ln -snFv $files/bin           $HOME/bin
pushd $files
git submodule init
git submodule update --recursive
popd
