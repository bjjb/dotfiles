#!/usr/bin/env ruby

require 'rubygems'
require 'mechanize'
if ARGV.empty?
  puts "Usage: pbhunt SEARCH..."
end


def search(s)
  client = Mechanize.new('pbhunt v0.1')
  url = 'https://thepiratebay.se/search/%s' % [URI.escape(s)]
  client.get(url) do |page|
    page.content
  end
end

ARGV.each { |s| puts search(s) }
# vi:ft=ruby
